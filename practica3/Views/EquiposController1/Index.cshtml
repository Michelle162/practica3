<h1>Mantenimientos de equipos</h1>
<br />
<form asp-action="CrearEquipos">
    @*Inicio de formulario*@
        <div class="form-group row mb-4">
            <div class="col-sm-2">
                <label>Nombre</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre","",new {@class="form-control"})
            </div>
            <div class="col-sm-4">
                @Html.TextBox("lblDescripcion","Descripcion")
            </div>
            <div class="col-sm-4">
                @Html.TextBox("descripcion", "", new { @class = "form-control", @placeHolder="Ingrese la Descripcion" })
             </div>
            <div class="col-sm-4">
                @Html.DropDownList("marcas_id", ViewData["listadoDeMarcas"] as SelectList, "Sellecione una marca", new {@class="form-control"})
            </div>

        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Equipo</th>
                    <th>Descripcion</th>
                    <th>Marca</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var equipo in (IEnumerable<dynamic>)ViewData["ListadoEquipo"])
            {
                <tr>
                    <td>@equipo.nombre</td>
                    <td>@equipo.descripcion</td>
                    <td>@equipo.marca_nombre</td>
                </tr>
            }
        </tbody>
        </table>


    @*Fin de formulario*@
</form>
